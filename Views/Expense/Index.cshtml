@model IEnumerable<Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Expense", asp-action="Create" class="btn btn-primary">Create new Expense</a>
        </div>
    </div>
    <br />
    
    @if(Model.Count() > 0)
    {
       
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense
                    </th>
                    <th>
                        Amount
                    </th>
                    <th>
                        Expense Type
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var exp in Model)
                {
                <tr>
                    <td with="25%">@exp.ExpenseName</td>
                    <td width="25%">@exp.Amount</td>
                    <td width="25%">@exp.ExpenseType.Name</td>
                    <td width="25%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Expense" , asp-action="Update" asp-route-Id="@exp.Id" type="button" class="btn btn-info" style="margin:5px">Update</a>
                            <a asp-controller="Expense" , asp-action="Delete" asp-route-Id="@exp.Id" type="button" class="btn btn-danger" style="margin:5px">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Items created yet</p>
    }

</div>