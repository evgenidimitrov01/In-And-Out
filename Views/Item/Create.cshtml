@model Item

<form method="post" asp-action="Create">
    <div class="border p-3">
        <h2 class="text-black-50 pl-3">Add Item</h2>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4"> <label asp-for="ItemName"></label></div>
                    <div class="col-4"> <label asp-for="Borrower"></label></div>
                    <div class="col-4"> <label asp-for="Lender"></label></div>
                </div>
                <div class="form-group row">
                    <div class="col-4"><input asp-for="ItemName" class="form-control" /> </div>
                    <div class="col-4"><input asp-for="Borrower" class="form-control" /></div>
                    <div class="col-4"><input asp-for="Lender" class="form-control" /></div>
                </div>
                <div class="form-group row">
                    <div class="col-9 offset-3 row">
                        <div class="col-4"> <input type="submit" class="btn btn-info w-75" value="Create" /></div>
                        <div class="col-4"> <a class="btn btn-danger w-75" asp-controller="Item" asp-action="Index">Back</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



