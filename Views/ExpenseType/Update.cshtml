@model ExpenseType

<form method="post" asp-action="UpdatePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2 class="text-black-50 pl-3">Edit Expense type</h2>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6"> <label asp-for="Name"></label></div>
                </div>
                <div class="form-group row">
                    <div class="col-12"><input asp-for="Name" class="form-control" /> <span asp-validation-for="Name" class="text-danger"></span></div>
                </div>
                <div class="form-group row">
                    <div class="col-9 offset-3 row">
                        <div class="col-4"> <input type="submit" class="btn btn-info w-75" value="Edit" /></div>
                        <div class="col-4"> <a class="btn btn-danger w-75" asp-controller="ExpenseType" asp-action="Index">Back</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
