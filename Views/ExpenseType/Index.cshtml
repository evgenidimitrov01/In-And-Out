@model IEnumerable<ExpenseType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ExpenseType", asp-action="Create" class="btn btn-primary">Create new Expense type</a>
        </div>
    </div>
    <br />
    
    @if(Model.Count() > 0)
    {
       
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Expense
                    </th>
                    <th>
                        Changes
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var expType in Model)
                {
                <tr>
                    <td with="35%">@expType.Name</td>
                    <td width="30%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="ExpenseType" , asp-action="Update" asp-route-Id="@expType.Id" type="button" class="btn btn-info" style="margin:5px">Update</a>
                            <a asp-controller="ExpenseType" , asp-action="Delete" asp-route-Id="@expType.Id" type="button" class="btn btn-danger" style="margin:5px">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Items created yet</p>
    }

</div>